<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BookDetails_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/shelf1"
            android:layout_width="30dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:background="@color/black1"
            />


        <Button
            android:id="@+id/shelf2"
            android:layout_width="30dp"
            android:layout_height="150dp"
            android:background="@color/black1"
            android:layout_marginLeft="40dp"
            />

        <Button
            android:id="@+id/shelf3"
            android:layout_width="30dp"
            android:layout_height="150dp"
            android:background="@color/black1"
            android:layout_marginLeft="40dp" />
        <Button
            android:id="@+id/shelf4"
            android:layout_width="30dp"
            android:layout_height="150dp"
            android:background="@color/black1"
            android:layout_marginLeft="40dp"/>

        <Button
            android:id="@+id/shelf5"
            android:layout_width="30dp"
            android:layout_height="150dp"
            android:layout_marginLeft="40dp"
            android:background="@color/black1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/shelf6"
            android:layout_width="30dp"
            android:layout_height="150dp"
            android:background="@color/black1"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/shelf7"
            android:layout_width="30dp"
            android:layout_height="150dp"
            android:background="@color/black1"
            android:layout_marginLeft="40dp"
            />

        <Button
            android:id="@+id/shelf8"
            android:layout_width="30dp"
            android:layout_height="150dp"
            android:background="@color/black1"
            android:layout_marginLeft="40dp" />
        <Button
            android:id="@+id/shelf9"
            android:layout_width="30dp"
            android:layout_height="150dp"
            android:background="@color/black1"
            android:layout_marginLeft="40dp"/>
        <Button
            android:id="@+id/shelf10"
            android:layout_width="30dp"
            android:layout_height="150dp"
            android:background="@color/black1"
            android:layout_marginLeft="40dp"/>
    </LinearLayout>


</LinearLayout>